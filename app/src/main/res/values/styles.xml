<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="contactElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/element_height</item>
        <item name="android:layout_marginHorizontal">@dimen/horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">@dimen/edittext_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="contactDetailElementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_double</item>
        <item name="android:layout_marginVertical">@dimen/margin</item>
    </style>
</resources>